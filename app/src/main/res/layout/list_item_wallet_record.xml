<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_8"
    android:background="@drawable/login_background_button_active">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:padding="@dimen/dp_16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_title"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:textSize="@dimen/sp_7_5"
                android:layout_height="wrap_content"
                android:text=""/>


            <TextView
                android:id="@+id/tv_description"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:textSize="@dimen/sp_7_5"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:text="Emi"/>


            <TextView
                android:id="@+id/tv_date"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:textSize="@dimen/sp_6"
                android:visibility="gone"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_height="wrap_content"
                android:text="29 July 2015 10am "/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical"
           >
            <TextView
                android:id="@+id/tv_wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_8"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="$50"/>



        </LinearLayout>





    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_invoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:gravity="right">

        <TextView
            android:id="@+id/tv_reject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_6"
            android:textColor="@color/white"
            android:layout_gravity="right"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12"
            android:paddingTop="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_4"
            android:background="@drawable/login_background_button_selector"
            android:textStyle="bold"
            android:text="Cancel"/>

        <TextView
            android:id="@+id/tv_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_6"
            android:textColor="@color/white"
            android:layout_gravity="right"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12"
            android:paddingTop="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_4"
            android:background="@drawable/shape_coner_red"
            android:textStyle="bold"
            android:text="Accept"/>


    </LinearLayout>





</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" >
        <shape>

            <solid android:color="@color/green"/>

            <stroke
                android:width="1dp"
                android:color="#4CAF50" />
            <corners
                android:radius="8dp" />
            <padding
                android:left="4dp"
                android:top="2dp"
                android:right="4dp"
                android:bottom="2dp" />
            <size

                android:height="50dp"

                />

        </shape>

    </item>
    <item>
        <shape>
            <solid android:color="@color/green"/>
            <stroke
                android:width="0.7dp"
                android:color="#009688" />
            <corners
                android:radius="8dp" />
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />
            <size

                android:height="50dp"

                />
        </shape>
    </item>
</selector>